<%- include('homeHeader') -%>

<main class="main">
    <!-- Full-screen Carousel Section -->
    <section class="carousel-section">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-bs-interval="7000">
            <div class="carousel-inner">
                <% banners.forEach((banner, index) => { %>
                    <% banner.bannerImage.forEach((image, imageIndex) => { %>
                        <div class="carousel-item <%= index === 0 && imageIndex === 0 ? 'active' : '' %>">
                            <div class="carousel-image-container">
                                <img src="/uploads/<%= image %>" class="carousel-image" alt="Banner Image">
                                <div class="carousel-caption">
                                    <h5 id="bannerTitle"><%= banner.bannerTitle %></h5>
                                    <a href="<%= banner.bannerUrl %>" class="btn btn-primary" id="bannerSubTitle"><%= banner.bannerSubTitle %></a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev" style="background-color: transparent; border-color: transparent;">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next" style="background-color: transparent; border-color: transparent;">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- Trendy Products Section -->
    <section class="trendy-products-section">
        <div class="container">
            <h2 class="section-title text-center">Trendy Products</h2>
            <div class="row product-grid">
                <% const products = [
                    { name: "Red wide Sandall", price: 1800, image: "/uploads/Snakeskin Embossed Point Toe Stiletto Heeledâ€¦.jpg" },
                    { name: "Yellow Gloss", price: 3890, image: "/uploads/yellow gloss.jpg" },
                    { name: "Stiletto Heeled Slingback", price: 7210, image: "/uploads/Buckle Decor Point Toe Stiletto Heeled Slingback Pumps.jpg" },
                    { name: "White Sandal", price: 4310, image: "/uploads/white Elegant.jpg" },
                    { name: "Asra trendy Sandql", price: 7999, image: "/uploads/Asra Sandal.jpg" }
                ] %>
                <% products.forEach(product => { %>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="product-card">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                            <div class="product-details">
                                <h3 class="product-title"><%= product.name %></h3>
                                <p class="product-price">Rs. <%= product.price %></p>
                                <a href="/shop" class="btn btn-outline-primary btn-sm">Explore</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Video Banner Section -->
    <section class="video-banner-section">
        <div class="video-banner bg-image">
            <div class="container">
                <h3 class="video-banner-title">
                    <span>New Collection</span>
                    <strong>Winter'19 <i>/</i> Spring'20</strong>
                </h3>
            </div>
        </div>
    </section>
</main>

<!-- Logout Modal -->
<div id="logoutModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Logout Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to logout?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmLogout">Yes, Logout</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* General styles */
    body {
       font-family: auto;
    }

    .main {
        overflow-x: hidden;
    }

    /* Carousel styles */
    .carousel-section {
        height: 100vh;
        overflow: hidden;
    }

    .carousel-image-container {
        height: 100vh;
        position: relative;
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .carousel-caption {
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        background-color: transparent;
        padding: 20px;
        border-radius: 5px;
        width: 100%;
    }

    /* Smooth Right-to-Left Transition */
    .carousel-item {
        transition: transform 0.5s ease;
    }

    .carousel-item-next, .carousel-item-prev {
        display: block;
    }

    .carousel-item-next {
        transform: translateX(100%);
    }

    .carousel-item-prev {
        transform: translateX(-100%);
        opacity: 0;
    }

    .active.carousel-item-next {
        transform: translateX(0);
    }

    .active.carousel-item-prev {
        transform: translateX(0);
    }

    
    
    .carousel-item-next.carousel-item-left,
    .carousel-item-prev.carousel-item-right {
        transform: translateX(0);
    }

    /* Trendy Products styles */
    .trendy-products-section {
        padding: 60px 0;
        background-color: #f8f9fa;
    }

    .section-title {
        font-size: 2.5rem;
        margin-bottom: 40px;
    }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    .product-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .product-details {
        padding: 15px;
    }

    .product-title {
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    .product-price {
        font-weight: bold;
        color: #e47676;
    }

    /* Video Banner styles */
    .video-banner-section {
        padding: 80px 0;
    }

    .video-banner {
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: url('/uploads/high-heels-shoes-business-woman-living-room-getting-ready-work-her-home-fashion-beauty-female-employee-dressing-professional-corporate-outfit-office-her-house_590464-137131\ \(1\).jpg');
        background-size: cover;
        background-position: center;
        color: white;
    }

    .video-banner-title {
        font-size: 2.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        text-align: center;
    }

    #logoutModal{
        z-index: 1050;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
    const successMsg = '<%= successMsg.join("<br>") %>';
    if (successMsg) {
        Toastify({
            text: successMsg,
            duration: 3000,
            className: 'toastify-success',
            gravity: "top",
            position: "center",
            backgroundColor: 'green',
        }).showToast();
    }

    

    document.addEventListener('DOMContentLoaded', function() {
        const logoutIcon = document.querySelector('#logoutIcon');
        const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
        
        logoutIcon.addEventListener('click', function() {
            logoutModal.show();
        });

        document.querySelector('#confirmLogout').addEventListener('click', function() {
            window.location.href = '/logout';
        });
    });
</script>

<%- include('footer') -%>