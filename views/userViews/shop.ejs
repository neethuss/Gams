<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>GAMS</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
   
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/uploads/logo-resized.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/uploads/logo-resized.png">
    <link rel="" manifest="" href="/assets/images/icons/site.html">
    <link rel="mask-icon" href="/assets/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="../../upload/logo gams.jpg">
    <meta name="apple-mobile-web-app-title" content="Molla">
    <meta name="application-name" content="Molla">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="/assets/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
   
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/toastify.css">
    <link rel="stylesheet" href="/assets/css/coupon.css">
    <link rel="stylesheet" href="/assets/css/shop.css">

</head>

<body>
    <div class="page-wrapper">
        <header class="header">


            <div class="header-middle sticky-header">
                <div class="container">
                    <div class="header-left">
                        <button class="mobile-menu-toggler">
                            <span class="sr-only">Toggle mobile menu</span>
                            <i class="icon-bars"></i>
                        </button>

                        <a href="" class="logo">
                            <img src="/uploads/logo-resized.png" alt="Molla Logo" width="40" height="20">
                        </a>

                        <nav class="main-nav">
                            <ul class="menu sf-arrows">
                                <li class="megamenu-container active">
                                    <a href="/" class="sf-with-ul">Home</a>

                                </li>

                                <li>
                                    <a href="/shop" class="sf-with-ul">Shop</a>
                                </li>

                                <li>
                                    <a href="">About us</a>
                                </li>

                            </ul>
                        </nav>
                    </div>

                    <div class="header-right" style="display: flex;">
                        <div class="header-search">
                            <a href="#" class="search-toggle" role="button" title="Search"><i
                                    class="icon-search"></i></a>
                            <form action="/searchProduct" method="get">
                                <div class="header-search-wrapper">
                                    <label for="q" class="sr-only">Search</label>
                                    <input type="search" class="form-control" name="search" id="q"
                                        placeholder="Search product" required>
                                </div>
                            </form>
                        </div>


                    
                    </div>
                </div>
            </div>
        </header>

        <main class="main">
            <div>
                <div class="page-header text-center"
                    style="background-image: url('assets/images/page-header-bg.jpg'); height: 120px; margin-bottom: 12px;">
                    <div class="container-fluid">
                        <h1 class="page-title">Our Shop Gallery</h1>
                    </div>
                </div>




                <div class="page-content">


                    <div class="container-fluid">

                        <div class="container-fluid">

                            <div class="container-fluid">
                                <div class="filter-sort-container">
                                    <div class="filter-form">
                                        <form action="/filterByCategory" method="get">
                                            <select name="category" class="category-select">
                                                <option value="">All Categories</option>
                                                <% categories.forEach((category)=> { %>
                                                    <option value="<%= category.category_name %>">
                                                        <%= category.category_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            <button type="submit" class="filter-button">Filter By Category</button>
                                        </form>

                                    </div>
                                    <div class="filter-form">
                                        <form action="/sortByPrice" method="get">
                                            <select name="sortOption" class="sort-select">
                                                <option value="">All Products</option>
                                                <option value="LowToHigh">Low to High</option>
                                                <option value="HighToLow">High to Low</option>
                                            </select>
                                            <button type="submit" class="sort-button">Sort By Price</button>
                                        </form>
                                    </div>
                                </div>
                            </div>



                        </div>





                        <div class="products">
                            <div class="row"
                                style="display: flex; justify-content: space-around;align-items: center;padding-left: 70px;padding-right: 70px;">
                                <% products.forEach((product, i)=> { %>
                                    <div class="col-4 col-md-4 col-lg-4 col-xl-4">
                                        <div class="product">
                                            <figure class="product-media">

                                              
                                                <div class="image-container">
                                                    <img src="/uploads/<%= product.product_image[0] %>"
                                                        alt="Product image" class="product-image">
                                                </div>


                                                
                                                <div class="product-action ">
                                                    <a href="/product/<%= product._id%>" class="btn-product "><span>View
                                                            product</span></a>
                                                </div>
                                            </figure>

                                            <div class="product-body">
                                                <div class="product-cat">
                                                    <a href="#">
                                                        <%= product.product_category.category_name %>
                                                    </a>
                                                </div>
                                                <h3 class="product-title">
                                                    <a href="/product">
                                                        <%= product.product_name %>
                                                    </a>
                                                </h3>
                                                <div class="product-price">
                                                    <span>Rs. </span>
                                                    <%= product.product_price %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>




                    </div>

                    
                    <div class="pagination" style="display: flex; align-items: center; justify-content: center;">
                        <nav aria-label="Page navigation" class="pagination-container" style="margin-top:30px">
                            <ul class="pagination justify-content-center">
                                
                                <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="?page=<%= page - 1 %><%= sortOption ? '&sortOption=' + sortOption : '' %><%= category ? '&category=' + category : '' %><%= search ? '&search=' + search : '' %>"
                                        aria-label="Previous">
                                        <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                                    </a>
                                </li>

                               
                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= page == i ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="?page=<%= i %><%= sortOption ? '&sortOption=' + sortOption : '' %><%= category ? '&category=' + category : '' %><%= search ? '&search=' + search : '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <li class="page-item <%= page == totalPages ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="?page=<%= page + 1 %><%= sortOption ? '&sortOption=' + sortOption : '' %><%= category ? '&category=' + category : '' %><%= search ? '&search=' + search : '' %>"
                                                aria-label="Next">
                                                Next <span aria-hidden="true"><i
                                                        class="icon-long-arrow-right"></i></span>
                                            </a>
                                        </li>


                            </ul>
                        </nav>
                    </div>



                </div>
            </div>
        </main>




        <%- include('footer') -%>