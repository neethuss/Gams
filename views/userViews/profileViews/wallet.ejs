  <style>
      .centered-box {
      text-align: center;
      margin: 50px auto; 
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    .wallet-amount {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .wallet-history-btn {
      padding: 10px 15px;
      font-size: 16px;
      background-color: #d45c5c;
      color: #fff;
