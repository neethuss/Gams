<body>



  <header class="header">


    <div class="header-middle sticky-header">
      <div class="container">
        <div class="header-left">
          <button class="mobile-menu-toggler">
            <span class="sr-only">Toggle mobile menu</span>
            <i class="icon-bars"></i>
          </button>

          <a href="/" class="logo">
            <img src="/uploads/logo-resized.png" alt="Molla Logo" width="50px">
          </a>

          <nav class="main-nav">
            <ul class="menu sf-arrows">
              <li class="megamenu-container active">
                <a href="/" class="sf-with-ul">Home</a>


              </li>
              <li>
                <a href="/shop" class="sf-with-ul">Shop</a>


              </li>
              <li>
                <a href="/aboutUs" class="sf-with-ul">About Us</a>


              </li>

            </ul>
          </nav>
        </div>

        <div class="header-right">
          <ul class="menu sf-arrows">


            <li>
              <a href="/wallet" class="sf-with-ul">Wallet </a>


            </li>
            <li style="width: 80px; ">
              <a href="/profile"><img src="/uploads/user profile.png" alt=""></a>
            </li>

            <li style="width: 90px; ">
              <a href="/wishlist"><img src="/uploads/my-wish-list.png" alt=""></a>
            </li>

            <li class="cart-icon-container">
              <a href="/cart" style="padding-bottom: 17px;">
                <img src="/uploads/shopping-cart-icon.webp" alt="Shopping Cart">
                <span class="cart-badge">
                  <%= cartQuantity %>
                </span>
              </a>
            </li>

            <li style="width: 80px;">
              <a id="logoutIcon" href="#"><img src="/uploads/logout-icon.png" alt=""></a>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </header>

  <% if(wallet) {%>

    <div class="container">
      <div class="centered-table">
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th>Process</th>
              <th>Amount</th>
              <th>Date</th>
            </tr>

          </thead>
          <tbody>
            <% wallet.forEach((item)=>{ %>
              <tr>
                <td>
                  <%= item.process %>
                </td>
                <td class="<%= (item.process.includes('refund') ? 'green-text' : 'red-text') %>">
                  <%= (item.process.includes('refund') ? '+' : '-' ) %>
                    <%= item.amount %>
                </td>
                <td>
                  <%= item.date.toLocaleDateString() %>
                </td>
              </tr>
              <% }) %>

          </tbody>
        </table>
      </div>
    </div>

    <%}else{%>

      <div class="wallet-history">

        <div class="wallet-history-empty">
          <h class="wallet-history-message">No transactions found in your wallet history.</h>

        </div>
      </div>


      <%}%>
        <div id="logoutModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <p>Are you sure you want to logout?</p>
            <div class="modal-buttons">
              <button id="confirmLogout">Yes</button>
              <button id="cancelLogout">Cancel</button>
            </div>
          </div>

        </div>

        <style>
          .wallet-history {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: medium;
            height: 70vh;
          }

          .cart-icon-container {
            position: relative;
            width: 100px;
          }

          .cart-icon-container a {
            display: block;
          }

          .cart-badge {
            position: absolute;
            top: -30px;
            right: -30px;
            background-color: #c73232a1;
            color: white;
            border-radius: 50%;
            padding: 5px 8px;
            font-size: 12px;
            width: 20px;
            height: 20px;
          }

          .green-text {
            color: green;
          }

          .red-text {
            color: red;
          }
        </style>

        <script>
          const logoutIcon = document.querySelector('#logoutIcon');
          const logoutModal = document.querySelector('#logoutModal');
          const closeButton = document.querySelector('.close');

          logoutIcon.addEventListener('click', function () {
            logoutModal.style.display = 'block';
          });

          closeButton.addEventListener('click', function () {
            logoutModal.style.display = 'none';
          });

          window.addEventListener('click', function (event) {
            if (event.target == logoutModal) {
              logoutModal.style.display = 'none';
            }
          });

          document.querySelector('#cancelLogout').addEventListener('click', function () {
            logoutModal.style.display = 'none';
          });

          document.querySelector('#confirmLogout').addEventListener('click', function () {
            window.location.href = '/logout';
          });


        </script>


