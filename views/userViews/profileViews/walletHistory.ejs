    .centered-table {
      display: flex;
      justify-content: center;
      margin-top: 30px;

    }

    table {
      width: 80%;
      margin: auto;
      font-size: 14px;
    }

    .table th,
    .table td {
      text-align: center;
      padding: 10px;
    }

    .table thead {
      background-color: #343a40;
      color: #fff;
    }

    .table tbody tr:nth-child(even) {
      background-color: #f8f9fa;
    }
  </style>
