              <a href="/Cart" class="sf-with-ul">Go to Cart</a>


            </li>

          </ul>
        </div>
      </div>
    </div>
  </header>

  <% if(wallet) {%>

    <div class="container">
      <div class="centered-table">
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th>Process</th>
              <th>Amount</th>
              <th>Date</th>
            </tr>
  
          </thead>
          <tbody>
            <% wallet.forEach((item)=>{%>
              <tr>
                <td>
                  <%= item.process %>
                </td>
  
                <td class="<%= (item.process.includes('refund') ? 'green-text' : 'red-text') %>">
                  <%= (item.process.includes('refund') ? '+' : '-' ) %>
                    <%= item.amount %>
                </td>
                <td>
                  <%= item.date.toLocaleDateString() %>
                </td>
              </tr>
              <%}) %>
          </tbody>
        </table>
      </div>
    </div>

  <%}else{%>

    <div class="wallet-history" >
     
      <div class="wallet-history-empty">
          <h class="wallet-history-message">No transactions found in your wallet history.</h>
         
      </div>
  </div>
  
    
    <%}%>

