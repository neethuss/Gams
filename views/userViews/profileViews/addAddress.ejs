    <h1>Add Delivery Address</h1>
    <form action="/addAddress" method="post" onsubmit="return validateForm()">
        <label for="houseName">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="street">Address:</label>
        <input type="text" id="address" name="address" required><br><br>

        <label for="city">District:</label>
        <input type="text" id="district" name="district" required><br><br>

        <label for="state">State:</label>
        <input type="text" id="state" name="state" required><br><br>

        <label for="pincode">Country:</label>
        <input type="text" id="country" name="country" required><br><br>

        <label for="pincode">Pincode:</label>
        <input type="text" id="pincode" name="pincode" required><br><br>

        <label for="pincode">Phone Number:</label>
        <input type="text" id="phone" name="phone" required><br><br>

        <input type="submit" value="Submit">
    </form>

    <script>
        function validateForm() {
            
            var name = document.getElementById("name").value.trim();
            var address = document.getElementById("address").value.trim();
            var district = document.getElementById("district").value.trim();
            var state = document.getElementById("state").value.trim();
            var country = document.getElementById("country").value.trim();
            var pincode = document.getElementById("pincode").value.trim();
            var phone = document.getElementById("phone").value.trim();

            
            if (name === "") {
                alert("name must be filled out");
                return false;
            }

            
            if (address === "") {
                alert("address must be filled out");
                return false;
            }

            
            if (district === "") {
                alert("district must be filled out");
                return false;
            }

            
            if (state === "") {
                alert("State must be filled out");
                return false;
            }

            if (country === "") {
                alert("country must be filled out");
                return false;
            }

            if (pincode === "") {
                alert("pincode must be filled out");
                return false;
            }

            if (phone === "") {
                alert("phone must be filled out");
                return false;
            }

            if (name.length < 4) {
                alert("name must be at least 4 characters")
                return false;
            }

            if (!/^[a-zA-Z]+$/.test(name)) {
                alert("Enter valid name")
                return false;
            }

            
            if (!/^[a-zA-Z]+$/.test(address)) {
                alert("Enter valid address")
                return false;
            }

            if (!/^[a-zA-Z]+$/.test(district)) {
                alert("Enter valid district")
                return false;
            }

            if (!/^[a-zA-Z]+$/.test(state)) {
                alert("Enter valid state")
                return false;
            }

            if (!/^[a-zA-Z]+$/.test(country)) {
                alert("Enter valid country")
                return false;
            }

            if (pincode.length !== 6 || !/^\d+$/.test(pincode)) {
                alert("Enter valid pincode")
                return false;
            }

            if (phone.length !== 10 || !/^\d+$/.test(phone)) {
                alert("Enter valid phone number")
                return false;
            }

            return true; 
        }
    </script>
