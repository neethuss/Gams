<body>



  <header class="header">


    <div class="header-middle sticky-header">
      <div class="container">
        <div class="header-left">
          <button class="mobile-menu-toggler">
            <span class="sr-only">Toggle mobile menu</span>
            <i class="icon-bars"></i>
          </button>

          <a href="index.html" class="logo">
            <img src="assets/images/logo.png" alt="Molla Logo" width="105" height="25">
          </a>

          <nav class="main-nav">
            <ul class="menu sf-arrows">
              <li class="megamenu-container active">
                <a href="/" class="sf-with-ul">Home</a>


              </li>
              <li>
                <a href="/shop" class="sf-with-ul">Shop</a>


              </li>
              <li>
                <a href="" class="sf-with-ul">About Us</a>


              </li>

            </ul>
          </nav>
        </div>

        <div class="header-right">


          <div>
            <ul class="menu sf-arrows">


              <li>
                <a href="/wallet" class="sf-with-ul">Wallet </a>


              </li>

            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>



  <div class="container">
    <div class="main-body">

  
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="/uploads/user profile.png" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4>
                    <%=user.username%>
                  </h4>

                  <div class="row">

                  </div>
                </div>
              </div>
            </div>

          </div>


        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=user.username%>
                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=user.email%>
                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=user.phone%>
                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">ReferalCode</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <a href="/referalLogout">Refer your code <u>
                      <%=user.referalCode%>
                    </u> to others and get Rs.250</a>

                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Address</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <% if (user.userAddress && user.userAddress.name) { %>
                    <%=user.userAddress.name%>,<%=user.userAddress.address%>,<%=user.userAddress.pincode%>,
                          <%=user.userAddress.district%>,<%=user.userAddress.state%>,<%=user.userAddress.country%><br>
                                phone:<%=user.userAddress.phone%>
                                  <% } else { %>
                                    No address available.
                                    <% } %>

                </div>

              </div>
              <hr>
              <div class="d-flex justify-content-center">
                <div class="col-sm-12">
                  <a class="btn btn-info " href="/editprofile/<%=user._id%>">Edit profile</a>
                  <a class="btn btn-info " href="/addAddress">Add Address</a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    
  </div>

  <div class="row" id="viewAddress">
    <% addresses.forEach((address, index)=> { %>
      <div class="col-md-4 mb-3">
        <div class="card" style="margin-left: 20px;">
          <div class="card-header bg-dark text-white">
            <input type="radio" name="selectedAddress" value="<%= address._id %>" <% if(user.userAddress &&
              user.userAddress.toString()===address._id) { %>checked<% } %> onclick="selectAddress('<%= address._id %>
                ')">
                <label for="userAddress<%= index %>">
                  <span class="ml-2">Address <%= index + 1 %></span>
                </label>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= address.name.charAt(0).toUpperCase() + address.name.slice(1).toLowerCase() %>
            </h5>
            <p class="card-text">
              <%= address.address %>, <%= address.pincode %>, <%= address.district %>, <%= address.state %>, <%=
                        address.country %><br>
                        Phone: <%= address.phone %>
            </p>
            <div class="d-flex">

              <a href="/editAddress/<%= address._id %>"><img src="/uploads/edit.png" width="10%" alt=""></a>
              <a href="/deleteAddress/<%= address._id %>"><img src="/uploads/delete.png" width="10%" alt=""></a>

            </div>
          </div>
        </div>
      </div>
      <% }) %>
  </div>



  <script>
    function selectAddress(addressId) {
      
      console.log('Selected address ID:', addressId);

    
      fetch('/defaultAddress', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ defaultAddress: addressId }),
      })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
         
          console.log('Server response:', data);

          window.location.href = '/profile'

        })
        .catch(error => {
          console.error('There has been a problem with your fetch operation:', error);
        });
    }
  </script>





