<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GAMS - User Profile</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <style>
    body {
      font-family: auto;
      margin: 0;
      padding: 0;
      background-color: rgb(83, 83, 83);
      color: #333;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .header {
      background-color: transparent;
      color: #fff;
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo img {
      width: 50px;
    }

    .nav-menu {
      list-style-type: none;
      display: flex;
      gap: 20px;
      margin: 0;
      padding: 0;
    }

    .nav-menu li a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s;
      font-family: auto;
    }

    .nav-menu li a:hover {
      color: #ddd;
    }

    .profile-section {
      margin-top: 40px;
      display: flex;
      justify-content: center;
    }

    .profile-card {
      background-color: rgb(61, 61, 61);
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 30px;
      color: #fff;
      display: flex;
      gap: 30px;
      max-width: 800px;
      width: 100%;
    }

    .profile-left,
    .profile-right {
      flex: 1;
      width: 50%;

    }

    .profile-left {
      text-align: center;
    }

    .profile-right {
      display: flex;
      flex: 1;
      width: 50%;
      align-items: center;
      justify-content: center;
    }

    .profile-image {
      text-align: center;
      margin-bottom: 20px;
    }

    .profile-image img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #333;
    }

    .profile-details h2 {
      margin-bottom: 20px;
      color: #fff;
      text-align: center;
    }

    .profile-info {
      margin-bottom: 15px;
    }

    .profile-info strong {
      display: inline-block;
      width: 120px;
      color: #ddd;
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
      margin-right: 10px;
      margin-bottom: 10px;
    }

    .btn:hover {
      background-color: #555;
    }

    .addresses {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
    color: #fff;
  }

  .address-card {
    background-color: rgb(61, 61, 61);
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: calc(33.33% - 20px);
    min-width: 250px;
    max-width: 350px;
  }

  .address-card h3 {
    margin-top: 0;
    color: #fff;
    border-bottom: 1px solid #555;
    padding-bottom: 10px;
  }

  .address-actions {
    margin-top: 15px;
  }

  .address-actions a {
    margin-right: 10px;
  }

  @media (max-width: 1200px) {
    .address-card {
      width: calc(50% - 20px);
    }
  }

  @media (max-width: 768px) {
    .address-card {
      width: 100%;
    }
  }

    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 300px;
      border-radius: 5px;
      text-align: center;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }

    .close:hover,
    .close:focus {
      color: #000;
      text-decoration: none;
      cursor: pointer;
    }

    .modal-buttons {
      margin-top: 20px;
    }

    .modal-buttons button {
      margin: 0 10px;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #confirmLogout {
      background-color: #d9534f;
      color: white;
    }

    #cancelLogout {
      background-color: #5bc0de;
      color: white;
    }
  </style>
</head>

<body>
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">
          <img src="/uploads/logo-resized.png" alt="GAMS Logo">
        </div>
        <nav>
          <ul class="nav-menu">
            <li><a href="/">Home</a></li>
            <li><a href="/shop">Shop</a></li>
            <li><a href="/wallet">Wallet</a></li>
            <li><a href="/wishlist">Wishlist</a></li>
            <li><a href="/cart">Cart</a></li>
            <li><a href="#" id="logoutIcon">Logout</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main class="container">
    <section class="profile-section">
      <div class="profile-card">
        <div class="profile-left">
          <div class="profile-image">
            <img src="/uploads/user profile.png" alt="<%= user.username %>">
          </div>
          <h2>
            <%= user.username %>
          </h2>
          <a href="/editprofile/<%= user._id %>" class="btn">Edit Profile</a>
        </div>
        <div class="profile-right">
          <div class="profile-details">
            <div class="profile-info">
              <strong>Email:</strong>
              <%= user.email %>
            </div>
            <div class="profile-info">
              <strong>Phone:</strong>
              <%= user.phone %>
            </div>
            <div class="profile-info">
              <strong>Referal Code:</strong>
              <%= user.referalCode %>
            </div>
            <p>Refer your code to others and get Rs.250</p>
            <div class="profile-actions">
              <a href="/addAddress" class="btn">Add Address</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="addresses" style="color: #fff;" >
      <% addresses.forEach((address, index)=> { %>
        <div class="address-card" >
          <h3>Address <%= index + 1 %>
          </h3>
          <p>
            <%= address.name %>
          </p>
          <p>
            <%= address.address %>, <%= address.pincode %>
          </p>
          <p>
            <%= address.district %>, <%= address.state %>, <%= address.country %>
          </p>
          <p>Phone: <%= address.phone %>
          </p>
          <div class="address-actions">
            <a href="/editAddress/<%= address._id %>" class="btn">Edit</a>
            <a href="/deleteAddress/<%= address._id %>" class="btn">Delete</a>
          </div>
        </div>
        <% }) %>
    </section>
  </main>

  <div id="logoutModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <p>Are you sure you want to logout?</p>
      <div class="modal-buttons">
        <button id="confirmLogout">Yes</button>
        <button id="cancelLogout">Cancel</button>
      </div>
    </div>
  </div>

  <script>
    const logoutIcon = document.querySelector('#logoutIcon');
    const logoutModal = document.querySelector('#logoutModal');
    const closeButton = document.querySelector('.close');
    const confirmLogout = document.querySelector('#confirmLogout');
    const cancelLogout = document.querySelector('#cancelLogout');

    logoutIcon.addEventListener('click', function () {
      logoutModal.style.display = 'block';
    });

    closeButton.addEventListener('click', function () {
      logoutModal.style.display = 'none';
    });

    cancelLogout.addEventListener('click', function () {
      logoutModal.style.display = 'none';
    });

    confirmLogout.addEventListener('click', function () {
      window.location.href = '/logout';
    });

    window.addEventListener('click', function (event) {
      if (event.target == logoutModal) {
        logoutModal.style.display = 'none';
      }
    });
  </script>
</body>

</html>