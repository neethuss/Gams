<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/toastify.css">

    <title>Gams admin login</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: auto;
        }
        .background {
            background-image: url('');
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-color: black;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(1px);
            padding: 2rem;
            border-radius: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            width: 100%;
            max-width: 400px;
        }
        .form-header {
            text-align: center; 
            font-size: 1.5rem;
            color: #fff;
            margin-bottom: 1.5rem;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: white;
        }
        .form-control {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 4px;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .btn {
            width: 40%;
            padding: 0.5rem;
            border: none;
            border-radius: 4px;
            background-color: transparent;
            color: white;
            cursor: pointer;
            border: 1px solid gray;
            border-radius: 16px;
            transition: background-color 0.3s;
            margin: 0 auto;
        }

        .btn-container{
          display: flex;
          justify-items: center;
        }
        .btn:hover {
            background-color: #e47676;;
        }
        .error {
            color: #ff6b6b;
            font-size: 0.875rem;
        }
        a {
            color: #007bff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        #signup-link {
            text-align: center;
            margin-top: 1rem;
            color: white;
        }
    </style>
</head>
<body>
    <div class="background">
        <div class="form-container">
          <div class="form-header">
            GAMS ADMIN LOGIN
          </div>
            <form action="/admin" method="post" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="register-email-2">Your email address *</label>
                    <input type="text" class="form-control" id="register-email-2" name="email" >
                    <span id="emailError" class="error"></span>
                </div>
                <div class="form-group">
                    <label for="register-password-2">Password *</label>
                    <input type="password" class="form-control" id="register-password-2" name="password">
                    <span id="passwordError" class="error"></span>
                </div>
               <div class="btn-container">
                <button type="submit" class="btn">LOGIN</button>
               </div>
            </form>
        </div>
    </div>

    <script>
        function validateForm() {
            document.getElementById('emailError').textContent = "";
            document.getElementById('passwordError').textContent = "";

            const email = document.getElementById('register-email-2').value.trim();
            const password = document.getElementById('register-password-2').value.trim();

            if (email === "") {
                document.getElementById('emailError').textContent = "Email cannot be empty";
                return false;
            }
            if (!/^\S+@\S+\.\S+$/.test(email)) {
                document.getElementById('emailError').textContent = "Invalid email format";
                return false;
            }
            if (password === "") {
                document.getElementById('passwordError').textContent = "Password cannot be empty";
                return false;
            }
            if (password.length < 6) {
                document.getElementById('passwordError').textContent = "Password must contain at least 6 characters";
                return false;
            }
            return true;
        }
    </script>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
      const successMsg = '<%= successMsg.length ? successMsg[0] : "" %>';
    if (successMsg) {
        Toastify({
            text: successMsg,
            duration: 3000,
            className: 'toastify-success',
            gravity: "top",
            position: "center",
            backgroundColor: 'green',
        }).showToast();
    }

    const errorMsg = '<%= errorMsg.length ? errorMsg[0] : "" %>';
    if (errorMsg) {
        Toastify({
            text: errorMsg,
            duration: 3000,
            className: 'toastify-error',
            gravity: "top",
            position: "center",
            backgroundColor: '#ff6b6b',
        }).showToast();
    }
</script>
</body>
</html>